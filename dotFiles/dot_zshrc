# bash scripts

gitsetremote(){
	if [ -z "$1" ]
	then 
		echo "you forgot the name of the repo."
	else
    git remote set-url origin git@github.com:awestover/$1.git
  fi
}

rmd() {
  pandoc $1 | lynx -stdin
}

epic() {
  date >> $HOME/Desktop/journal/epic.md
  echo "$@" >> $HOME/Desktop/journal/epic.md
}

mkcdir() {
	mkdir $1
	cd $1
}

pandapdf() {
  fullname=$1
  filename=${fullname%.md}
  echo $filename
	pandoc $filename.md -s -o $filename.pdf
}

homework() {
	if [ -z "$1" ]
	then 
		echo "what should I name the homework?"
	else
		mkdir "./$1"
		cd "./$1"
		cp "$HOME/Desktop/forfun/notes/latexDocs/homework_head.tex" "."
		cp "$HOME/Desktop/forfun/notes/latexDocs/homework.tex" "./$1.tex"
	fi
}

writeup() {
	if [ -z "$1" ]
	then 
		echo "put a project name plz"
	else
		mkdir "./$1"
		cd "./$1"
		cp "$HOME/Desktop/forfun/notes/latexDocs/writeup.tex" "./$1.tex"
	fi
}

notes() {
	if [ -z "$1" ]
	then 
		echo "put a project name plz"
	else
		mkdir "./$1"
		cd "./$1"
		cp "$HOME/Desktop/forfun/notes/latexDocs/notes.tex" "./$1.tex"
	fi
}


vit() {
  latexmk -pdf -pvc $1 &>/dev/null &
  vi $1
}
kv(){
  kill $(ps aux | grep 'latexmk' | awk '{print $2}')
  latexmk -C
}

sky(){
  python3 $SKYSPACE/newfeed.py
  echo "sleeping..."
  sleep 0.5
  cd $(cat $SKYSPACE/most_recent_feed_dir.txt)
  vi $(cat $SKYSPACE/most_recent_feed.txt)
}

op(){
  for file in ./*.pdf; do open "${file}"; done
}

opng(){
  for file in ./*.png; do open "${file}"; done
}

myip() {
  ifconfig wlp0s20f3 | awk '$1 == "inet" {print $2}'
}

py() {
  if [ -z "$1" ]
  then 
    python3
  else
    python3 "$1"
  fi
}

source $ZSH/oh-my-zsh.sh
